<h1>전체 글 목록입니다.</h1>
<%@posts.each do |x|%>
  <%=x.title%> <br>

  <%=link_to post_path(x.id) do%>
    <button>보기</button>
  <%end%> 
  
  <%=link_to post_path(x.id), method: :delete do%>
    <button>삭제</button>
  <%end%> 

  <%=link_to edit_post_path(x.id) do %>
    <button>수정</button>
  <%end%> <br>
  -------------------------- <br>
<% end %>
<%=link_to '새 글 쓰기', new_post_path%> <br>