<%=form_for(@post) do |f|%>
  <%=f.label :title, '제목'%>
  <%=f.text_field :title%> <br>

  <%=f.label :content, '내용'%>
  <%=f.text_area :content%> <br>

  <ul>
    <%=f.fields_for :hashtags do |h|%>
      <li>
        <%=h.label :title, '해시태그'%>
        <%=h.text_field :title%>
      </li>
    <%end%>
  </ul>

  <%=f.submit '작성'%>
<%end%>